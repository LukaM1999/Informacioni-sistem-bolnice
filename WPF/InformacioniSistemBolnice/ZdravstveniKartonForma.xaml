        <ListView  Name ="ListaAlergena" Grid.Column="2" Margin="10,95,50,197">
            <ListView.View>
                <GridView>
                    <GridViewColumn/>
                </GridView>
            </ListView.View>
        </ListView>


    </Grid>
</UserControl>