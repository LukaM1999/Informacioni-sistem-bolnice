<UserControl x:Class="InformacioniSistemBolnice.IzborTerminaPacijenta"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:InformacioniSistemBolnice"
        mc:Ignorable="d"
        Height="650" Width="1000" Background="LightGray">
    <Grid>
        <Canvas>
            <DataGrid x:Name="ponudjeniTermini" Height="500" Width="825" CanUserAddRows="False" Canvas.Top="90" Canvas.Left="113"/>
            <Label Content="Izaberite zeljeni termin" FontSize="14" FontWeight="Bold" Canvas.Left="86" Canvas.Top="52" Width="166"/>
            <Button x:Name="zakaziDugme" Content="Zakazi" Canvas.Left="885" Canvas.Top="606" Width="81" Click="zakaziDugme_Click"/>

        </Canvas>
        <Button Style="{StaticResource ResourceKey=MainButtons}" x:Name="Nazad"  HorizontalAlignment="Left" VerticalAlignment="Top" Background="LightGray"  Width="50" Height="60" Margin="22,10,0,0" Click="NazadBtn_Click" >
            <StackPanel Orientation="Vertical">
                <Image Source="../../images/back.png" Width="30" Height="30" RenderOptions.BitmapScalingMode="Fant"/>
                <TextBlock Text="Nazad" VerticalAlignment="Center" FontSize="14"/>
            </StackPanel>
        </Button>
    </Grid>
</UserControl>
