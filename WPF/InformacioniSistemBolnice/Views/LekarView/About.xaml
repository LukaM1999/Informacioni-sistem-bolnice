<mah:MetroContentControl
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:InformacioniSistemBolnice"
             xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
             xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
             x:Class="InformacioniSistemBolnice.Views.LekarView.About"
             mc:Ignorable="d" 
             d:DesignHeight="612" Width="834">
    <Grid>
        <Grid>
            <Label FontSize="24" Content="{local:Loc Autor}"  FontWeight="Bold" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,264,0,0"/>
            <Label FontSize="24" Content="{local:Loc Predmet}"  FontWeight="Bold" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,311,0,0"/>
        </Grid>
        <Button HorizontalAlignment="Left" Margin="31,38,0,0" VerticalAlignment="Top" Click="Button_Click" BorderThickness="0" Background="Transparent" Cursor="Hand">
            <iconPacks:Codicons Kind="ChevronLeft" Height="35" Width="35"></iconPacks:Codicons>
        </Button>
    </Grid>
</mah:MetroContentControl>
